<Window x:Class="KoiFengShuiSystem.KoiFishManageWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoiFengShuiSystem"
        mc:Ignorable="d"
        Title="KoiFishManageWPF" Height="1000" Width="1850"
        WindowStartupLocation = "CenterScreen" Loaded="Window_Loaded">
    <Grid Margin="0,0,0,-6">
        <Label Content="Quản lý cá Koi" HorizontalAlignment="Left" Margin="601,48,0,0" VerticalAlignment="Top" FontSize="36" Height="96" Width="294"/>
        <DataGrid x:Name="KoiManageGrid" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="DataGrid_SelectionChanged" AutoGenerateColumns="False" RenderTransformOrigin="0.5,0.5" Margin="242,292,322,288" Loaded="KoiManageGrid_Loaded">
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.134"/>
                    <TranslateTransform/>
                </TransformGroup>
            </DataGrid.RenderTransform>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Koi Type" Width="100" Binding="{Binding KoiType}" />
                <DataGridTemplateColumn Header="Image">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Image}" Width="100" Height="100" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Koi element" Width="100" Binding="{Binding Element}" />
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" />
                <DataGridTemplateColumn Header="Colors">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding TypeColors}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding ColorId}" Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding Percentage, StringFormat={}{0:P0}}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnAdd" Content="Thêm cá Koi" HorizontalAlignment="Left" Height="75" Margin="365,150,0,0" VerticalAlignment="Top" Width="89" Click="btnAdd_Click"/>
        <Button x:Name="btnUpdate" Content="Cập nhật cá Koi" HorizontalAlignment="Left" Height="74" Margin="601,150,0,0" VerticalAlignment="Top" Width="100" Click="btnUpdate_Click"/>
        <Button x:Name="btnDelete" Content="Xóa cá Koi" HorizontalAlignment="Center" Height="75" Margin="0,149,0,0" VerticalAlignment="Top" Width="93" Click="btnDelete_Click"/>
        <Button x:Name="btnClose" Content="Quay lại" HorizontalAlignment="Left" Height="75" Margin="1132,149,0,0" VerticalAlignment="Top" Width="81" Click="btnClose_Click"/>
    </Grid>
</Window>
