<Window x:Class="KoiFengShuiSystem.AdminWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:KoiFengShuiSystem"
        Title="AdminWPF" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>  
        </Grid.ColumnDefinitions>

        <local:Sidebar Grid.Column="0" Loaded="Sidebar_Loaded"/>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Label Content="Welcome to the Admin Page" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36"/>
            
        </Grid>
    </Grid>
</Window>