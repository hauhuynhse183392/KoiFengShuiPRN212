<Window x:Class="KoiFengShuiSystem.CalculateCompatibilityWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoiFengShuiSystem"
        mc:Ignorable="d"
        Title="CalculateCompatibilityWPF" Height="1000" Width="1850"
        WindowStartupLocation = "CenterScreen">
    <Grid x:Name="color">
        <Label Content="Tính toán độ tương hợp" HorizontalAlignment="Center" Margin="0,46,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Label Content="Ngày tháng năm sinh:" HorizontalAlignment="Left" Margin="62,133,0,0" VerticalAlignment="Top" FontSize="22"/>
        <DatePicker x:Name="birthday" HorizontalAlignment="Left" Margin="290,136,0,0" VerticalAlignment="Top" Height="36" Width="156" FontSize="20"/>
        <Grid Margin="478,124,1214,747">
            <StackPanel x:Name="Gender" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Chọn giới tính:" FontSize="22" Margin="0,0,0,10"/>
                <RadioButton x:Name="MaleRadioButton" Content="Nam" GroupName="Gender" FontSize="20"/>
                <RadioButton x:Name="FemaleRadioButton" Content="Nữ" GroupName="Gender" FontSize="20"/>
            </StackPanel>
        </Grid>          
        <Grid Margin="345,296,345,98">
            <DataGrid x:Name="KoiGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,10,10" SelectionChanged="DataGrid_SelectionChanged" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Koi Type" Binding="{Binding KoiType}" />
                    <DataGridTemplateColumn Header="Image">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Image}" Width="100" Height="100" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Label Content="Bảng mệnh:" HorizontalAlignment="Left" Margin="778,134,0,0" VerticalAlignment="Top" FontSize="22"/>
        <ComboBox x:Name="cmb_element" HorizontalAlignment="Left" Margin="925,142,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cmb_Color" HorizontalAlignment="Left" Margin="1191,143,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Màu sắc:" HorizontalAlignment="Left" Margin="1096,134,0,0" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="0.342,0.574"/>
        <Label Content="Tên giống cá:" HorizontalAlignment="Left" Margin="1350,134,0,0" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="0.342,0.574"/>
        <TextBox x:Name="koiType" HorizontalAlignment="Left" Margin="1493,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="188" Height="30"/>
    </Grid>
</Window>
