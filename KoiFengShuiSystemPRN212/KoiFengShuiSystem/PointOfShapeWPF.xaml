<Window x:Class="KoiFengShuiSystem.PointOfShapeWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoiFengShuiSystem"
        mc:Ignorable="d"
        Title="PointOfShapeWPF" Height="761" Width="1485"
        WindowStartupLocation = "CenterScreen">
    <Grid>
        <DataGrid x:Name="dtg_PointOfShape" d:ItemsSource="{d:SampleData ItemCount=5}" AutoGenerateColumns="False" HorizontalAlignment="Left" VerticalAlignment="Top" Height="255" Margin="263,319,0,0" Width="963" SelectionChanged="dtg_PointOfShape_SelectionChanged" >

            <DataGrid.Resources >
                <Style TargetType="DataGridColumnHeader" >
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="20" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Element" Binding="{Binding ElementId}" Width="300" FontSize="16" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Shape" Binding="{Binding ShapeId}" Width="400" FontSize="16" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Point Of Shape" Binding="{Binding Point}" Width="*" FontSize="16" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Point Of Shape Management" Margin="502,13,498,592" FontSize="32"/>
        <Button x:Name="btn_Search" Content="Search" Margin="848,107,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="46" Width="164" FontSize="20" />
        <Button x:Name="btn_Pond" Content="Back Pond Management Page" Margin="85,107,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="46" Width="250" Click="btn_Pond_Click" FontSize="18"  />
        <TextBox x:Name="txt_Search" TextWrapping="Wrap"  Margin="502,107,0,0" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" Height="46" Width="310"/>
        <Button x:Name="btn_AddPoint" Content="Add Point Of Shape" Margin="179,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="67" Width="176" Click="btn_AddPoint_Click" FontSize="16"/>
        <Button x:Name="btn_UpdatePoint" Content="Update Point" Margin="0,678,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Height="67" Width="221" FontSize="16"/>
        <Button x:Name="btn_DeletePoint" Content="Delete Point Of Shape" Margin="1118,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="67" Width="176" Click="btn_DeletePoint_Click" FontSize="16" />
        <ComboBox x:Name="cbElement" HorizontalAlignment="Left" Margin="192,213,0,0" VerticalAlignment="Top" Width="176" Height="41" FontSize="18"/>
        <ComboBox x:Name="cbShape" HorizontalAlignment="Left" Margin="644,213,0,0" VerticalAlignment="Top" Width="222" Height="41" FontSize="18"/>
        <TextBox x:Name="txtPoint" TextWrapping="Wrap"  Margin="1131,215,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="38" RenderTransformOrigin="0.5,0.5" Width="176" FontSize="18"/>

        <Label Content="Element" Margin="63,207,0,0" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Width="96" Height="63"/>
        <Label Content="Shape" Margin="559,212,0,0" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Height="64"/>
        <Label Content="Point" Margin="1032,213,0,0" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="75"/>

    </Grid>
</Window>
