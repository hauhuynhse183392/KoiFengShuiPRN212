<Window x:Class="KoiFengShuiSystem.PondManageWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoiFengShuiSystem"
        mc:Ignorable="d"
        Title="PondManageWPF" Height="761" Width="1485"
        WindowStartupLocation = "CenterScreen">
    <Grid >

        <Label Content="Pond Management" Margin="578,23,579,582" FontSize="36"/>

        <DataGrid x:Name="dtgPond" d:ItemsSource="{d:SampleData ItemCount=5}" AutoGenerateColumns="False" HorizontalAlignment="Center" VerticalAlignment="Top" Height="402" Margin="0,223,0,0" Width="1179">
            <DataGrid.Resources >
                <Style TargetType="DataGridColumnHeader" >
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="20" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Shape" Binding="{Binding ShapeId}" Width="400" FontSize="16" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="Image Of Shape" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Image}" Width="510" Height="120" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Point Of Shape">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding PointOfShapes}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding ElementId}" Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding Point}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btn_AddPond" Content="Add Pond" Margin="179,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="48" Width="176"/>
        <Button x:Name="btn_UpdatePond" Content="Update Pond" Margin="0,613,0,0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="48" Width="176"/>
        <Button x:Name="btn_DeletePond" Content="Delete Pond" Margin="1118,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="47" Width="176" Click="btn_DeletePond_Click"/>
        <Button x:Name="btn_Search" Content="Search" Margin="848,107,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="46" Width="164" Click="btn_Search_Click" />
        <Button x:Name="btn_PointOfShape" Content="Manage Point Of Shape" Margin="1206,107,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="46" Width="180" Click="btn_PointOfShape_Click" />
        <Button x:Name="btn_Admin" Content="Back Admin Page" Margin="107,107,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="46" Width="180" Click="btn_Admin_Click" />
        <TextBox x:Name="txt_Search" TextWrapping="Wrap"  Margin="502,107,0,0" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Height="46" Width="310"/>



    </Grid>
</Window>
